alias reload!='. ~/.zshrc'

alias cls='clear' # Good 'ol Clear Screen command

alias la='ls -a'

alias src='cd ~/src'

# PS
alias psa="ps aux"
alias psg="ps aux | grep "

# Moving around
alias cdb='cd -'
alias cls='clear;ls'

# Show human friendly numbers and colors
alias df='df -h'
alias du='du -h -d 2'

alias ll='ls -alGh'
alias ls='ls -Gh'

# show me files matching "ls grep"
alias lsg='ll | grep'

# zsh profile editing
alias ze='$EDITOR ~/.zshrc'
